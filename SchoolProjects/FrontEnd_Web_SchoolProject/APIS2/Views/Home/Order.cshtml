@model APIS2.Models.BillData

@{
    ViewBag.Title = "MicroTech";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Please enter your credentials.</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div>@Html.LabelFor(model => model.FirstName)</div>
        <div>
            @Html.TextBoxFor(model => model.FirstName, new { style = "width: 200px;" })
            @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
        </div>

        <div>@Html.LabelFor(model => model.LastName)</div>
        <div>
            @Html.TextBoxFor(model => model.LastName, new { style = "width: 200px;" })
            @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
        </div>

        <div>@Html.LabelFor(model => model.EmailAddress)</div>
        <div>
            @Html.TextBoxFor(model => model.EmailAddress, new { style = "width: 200px;" })
            @Html.ValidationMessageFor(model => model.EmailAddress, "", new { @class = "text-danger" })
        </div>

        <div>@Html.LabelFor(model => model.PhoneNumber)</div>
        <div>
            @Html.TextBoxFor(model => model.PhoneNumber, new { style = "width: 200px;" })
            @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
        </div>

        <div>@Html.LabelFor(model => model.Country)</div>
        <div>
            @Html.TextBoxFor(model => model.Country, new { style = "width: 200px;" })
            @Html.ValidationMessageFor(model => model.Country, "", new { @class = "text-danger" })
        </div>

        <div>@Html.LabelFor(model => model.City)</div>
        <div>
            @Html.TextBoxFor(model => model.City, new { style = "width: 200px;" })
            @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })
        </div>

        <div>@Html.LabelFor(model => model.Street)</div>
        <div>
            @Html.TextBoxFor(model => model.Street, new { style = "width: 200px;" })
            @Html.ValidationMessageFor(model => model.Street, "", new { @class = "text-danger" })
        </div>

        <div>@Html.LabelFor(model => model.StreetNumber)</div>
        <div>
            @Html.TextBoxFor(model => model.StreetNumber, new { style = "width: 200px;" })
            @Html.ValidationMessageFor(model => model.StreetNumber, "", new { @class = "text-danger" })
        </div>

        <div>@Html.LabelFor(model => model.PostalCode)</div>
        <div>
            @Html.TextBoxFor(model => model.PostalCode, new { style = "width: 200px;" })
            @Html.ValidationMessageFor(model => model.PostalCode, "", new { @class = "text-danger" })
        </div>

        <br />

        <div>
            <input type="submit" value="Confirm Order" name="action:ConfirmOrder" />
            <input type="submit" value="Download Bill" name="action:DownloadBill" />
            @Html.ActionLink("Cancel", "Index")           
        </div>

        <br />

        <p>
            <span style="color:red">@ViewBag.Message</span>
        </p>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
