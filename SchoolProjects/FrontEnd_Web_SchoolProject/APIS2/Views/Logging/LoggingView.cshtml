@model APIS2.Models.Logging

@{
    ViewBag.Title = "MicroTech";
}


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Please log in to the system.</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div>@Html.LabelFor(model => model.Login)</div>
        <div>@Html.TextBoxFor(model => model.Login, new { style = "width: 200px;" })</div>

        <div>@Html.LabelFor(model => model.Password)</div>
        <div>@Html.PasswordFor(model => model.Password, new { style = "width: 200px;" })</div>

        <br />

        <p>
            <input type="submit" value="Log in" name="action:Login" />
            @Html.ActionLink("Cancel", "../Home/Index")
        </p>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
