@model APIS2.Models.ManagerPage

@{
    ViewBag.Title = "MicroTech";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        <h4>You can create account for the new employee.</h4>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div>@Html.LabelFor(model => model.FirstName)</div>
        <div>@Html.TextBoxFor(model => model.FirstName, new { style = "width: 200px;" })</div>

        <div>@Html.LabelFor(model => model.LastName)</div>
        <div>@Html.TextBoxFor(model => model.LastName, new { style = "width: 200px;" })</div>

        <div>@Html.LabelFor(model => model.NickName)</div>
        <div>@Html.TextBoxFor(model => model.NickName, new { style = "width: 200px;" })</div>

        <div>@Html.LabelFor(model => model.Password)</div>
        <div>@Html.PasswordFor(model => model.Password, new { style = "width: 200px;" })</div>

        <div>@Html.LabelFor(model => model.PasswordVerify)</div>
        <div>@Html.PasswordFor(model => model.PasswordVerify, new { style = "width: 200px;" })</div>

        <div>@Html.LabelFor(model => model.UserType)</div>
        <div>@Html.DropDownListFor(model => model.UserType, new SelectList(Model.PossibleUserTypes, "Value", "Text"), new { style = "width: 200px;" })</div>

        <br />

        <p>
            <input type="submit" value="Create Account" name="action:CreateAccount" />
        </p>

        <p>
            <span style="color:red">@ViewBag.Message</span>
        </p>

        <br />
        <br />

        <h4>Delete Account</h4>
        <p>
            <div>@Html.DropDownList("IDofUserToDelete", new SelectList(Model.UsersToDelete, "Value", "Text"), new { style = "width: 200px;" })</div>
            <br />
            <input type="submit" value="Delete Account" name="action:DeleteAccount" />
        </p>

        <br />

        <p>
            @Html.ActionLink("Log out", "LoggingView")
        </p>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
